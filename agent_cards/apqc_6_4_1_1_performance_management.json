{
  "apqc_id": "6.4.1.1",
  "apqc_name": "Manage employee performance",
  "category": "6.0 - Develop and Manage Human Capital",
  "description": "End-to-end performance management workflow from goal setting through performance reviews, including continuous feedback, development planning, and calibration.",
  "orchestration_pattern": "sequential",
  "total_steps": 7,
  "estimated_duration_seconds": 7776000,
  "compliance_frameworks": ["EEOC", "ADA", "GDPR"],
  "data_retention_days": 2555,

  "agent_cards": [
    {
      "id": "agent_6_4_1_1_step1",
      "apqc_id": "6.4.1.1",
      "step_number": 1,
      "step_name": "Goal Setting",
      "description": "Establish individual goals aligned with organizational objectives",
      "purpose": "Clear performance expectations",
      "business_value": "Aligned workforce towards business outcomes",

      "capabilities": ["goal_creation", "okr_management", "goal_cascading", "smart_validation", "goal_alignment_tracking"],

      "input_schema": [
        {"name": "employee_id", "type": "string", "required": true},
        {"name": "review_period", "type": "object", "required": true},
        {"name": "organizational_goals", "type": "array", "required": true},
        {"name": "goal_framework", "type": "string", "required": true, "validation": {"enum": ["okr", "smart", "balanced_scorecard", "custom"]}}
      ],

      "output_schema": [
        {"name": "employee_goals", "type": "array", "required": true},
        {"name": "goal_alignment_score", "type": "number", "required": true},
        {"name": "manager_approval_status", "type": "string", "required": true},
        {"name": "goal_weights", "type": "object", "required": true}
      ],

      "required_integrations": [
        {"system": "Performance Management", "type": "bidirectional", "protocol": "API", "examples": ["Workday", "SAP SuccessFactors", "15Five", "Lattice"]},
        {"system": "HRIS", "type": "read", "protocol": "API"},
        {"system": "Strategy Platform", "type": "read", "protocol": "API", "examples": ["Cascade", "Gtmhub"]}
      ],

      "decision_rules": [
        {"rule_id": "DR-PM-001", "name": "Goal Alignment", "condition": "goal.alignment_score < 0.6", "action": "require_revision", "priority": 1},
        {"rule_id": "DR-PM-002", "name": "Goal Count", "condition": "goals.count > 7", "action": "recommend_consolidation", "priority": 2}
      ],

      "error_handlers": [
        {"error_type": "manager_unavailable", "severity": "medium", "action": "route_to_skip_level", "notification": ["hr_partner"]}
      ]
    },

    {
      "id": "agent_6_4_1_1_step2",
      "apqc_id": "6.4.1.1",
      "step_number": 2,
      "step_name": "Continuous Feedback",
      "description": "Enable ongoing feedback exchange between employees and managers",
      "purpose": "Real-time performance guidance",
      "business_value": "Faster performance improvement",

      "capabilities": ["feedback_collection", "recognition_management", "check_in_scheduling", "feedback_analytics", "sentiment_analysis"],

      "input_schema": [
        {"name": "feedback_type", "type": "string", "required": true, "validation": {"enum": ["praise", "constructive", "check_in", "recognition"]}},
        {"name": "from_employee", "type": "string", "required": true},
        {"name": "to_employee", "type": "string", "required": true},
        {"name": "feedback_content", "type": "string", "required": true}
      ],

      "output_schema": [
        {"name": "feedback_record", "type": "object", "required": true},
        {"name": "feedback_sentiment", "type": "string", "required": true},
        {"name": "action_items", "type": "array", "required": false}
      ],

      "required_integrations": [
        {"system": "Performance Management", "type": "bidirectional", "protocol": "API"},
        {"system": "Collaboration", "type": "bidirectional", "protocol": "API", "examples": ["Slack", "Microsoft Teams"]},
        {"system": "Recognition Platform", "type": "bidirectional", "protocol": "API", "examples": ["Bonusly", "Kudos", "Achievers"]}
      ],

      "decision_rules": [
        {"rule_id": "DR-PM-010", "name": "Feedback Gap", "condition": "days_since_feedback > 30", "action": "remind_manager", "priority": 2},
        {"rule_id": "DR-PM-011", "name": "Negative Pattern", "condition": "consecutive_negative_feedback >= 3", "action": "alert_hr_partner", "priority": 1}
      ],

      "error_handlers": [
        {"error_type": "inappropriate_content", "severity": "high", "action": "flag_for_hr_review", "notification": ["hr_partner"]}
      ]
    },

    {
      "id": "agent_6_4_1_1_step3",
      "apqc_id": "6.4.1.1",
      "step_number": 3,
      "step_name": "Progress Tracking",
      "description": "Monitor goal progress and key results throughout review period",
      "purpose": "Visibility into performance trajectory",
      "business_value": "Early intervention on performance issues",

      "capabilities": ["progress_measurement", "milestone_tracking", "dashboard_generation", "alert_management", "trend_analysis"],

      "input_schema": [
        {"name": "employee_id", "type": "string", "required": true},
        {"name": "goals", "type": "array", "required": true},
        {"name": "tracking_frequency", "type": "string", "required": true}
      ],

      "output_schema": [
        {"name": "progress_report", "type": "object", "required": true},
        {"name": "goal_status", "type": "object", "required": true},
        {"name": "at_risk_goals", "type": "array", "required": false},
        {"name": "completion_forecast", "type": "object", "required": true}
      ],

      "required_integrations": [
        {"system": "Performance Management", "type": "bidirectional", "protocol": "API"},
        {"system": "Project Management", "type": "read", "protocol": "API", "examples": ["Jira", "Asana"]},
        {"system": "CRM", "type": "read", "protocol": "API"}
      ],

      "decision_rules": [
        {"rule_id": "DR-PM-020", "name": "At Risk Goal", "condition": "goal.progress < expected_progress * 0.7", "action": "flag_for_discussion", "priority": 1}
      ],

      "error_handlers": [
        {"error_type": "data_not_updated", "severity": "low", "action": "send_update_reminder", "notification": ["employee"]}
      ]
    },

    {
      "id": "agent_6_4_1_1_step4",
      "apqc_id": "6.4.1.1",
      "step_number": 4,
      "step_name": "Self-Assessment",
      "description": "Employee self-reflection on performance and achievements",
      "purpose": "Employee voice in performance evaluation",
      "business_value": "Engaged employees in performance process",

      "capabilities": ["self_assessment_forms", "achievement_documentation", "evidence_collection", "reflection_prompts"],

      "input_schema": [
        {"name": "employee_id", "type": "string", "required": true},
        {"name": "review_period", "type": "object", "required": true},
        {"name": "goals", "type": "array", "required": true}
      ],

      "output_schema": [
        {"name": "self_assessment", "type": "object", "required": true},
        {"name": "achievements", "type": "array", "required": true},
        {"name": "challenges", "type": "array", "required": false},
        {"name": "development_requests", "type": "array", "required": false}
      ],

      "required_integrations": [
        {"system": "Performance Management", "type": "bidirectional", "protocol": "API"},
        {"system": "Document Storage", "type": "read", "protocol": "API"}
      ],

      "decision_rules": [
        {"rule_id": "DR-PM-030", "name": "Incomplete Assessment", "condition": "assessment.completion < 80%", "action": "block_submission", "priority": 1}
      ],

      "error_handlers": [
        {"error_type": "submission_deadline_passed", "severity": "medium", "action": "extend_deadline_with_approval", "notification": ["hr_partner"]}
      ]
    },

    {
      "id": "agent_6_4_1_1_step5",
      "apqc_id": "6.4.1.1",
      "step_number": 5,
      "step_name": "Manager Assessment",
      "description": "Manager evaluation of employee performance",
      "purpose": "Formal performance evaluation",
      "business_value": "Objective performance assessment",

      "capabilities": ["performance_rating", "competency_assessment", "feedback_synthesis", "rating_justification", "multi_rater_input"],

      "input_schema": [
        {"name": "employee_id", "type": "string", "required": true},
        {"name": "self_assessment", "type": "object", "required": true},
        {"name": "continuous_feedback", "type": "array", "required": true},
        {"name": "goal_results", "type": "object", "required": true}
      ],

      "output_schema": [
        {"name": "manager_assessment", "type": "object", "required": true},
        {"name": "performance_rating", "type": "string", "required": true},
        {"name": "competency_ratings", "type": "object", "required": true},
        {"name": "recommended_actions", "type": "array", "required": true}
      ],

      "required_integrations": [
        {"system": "Performance Management", "type": "bidirectional", "protocol": "API"},
        {"system": "360 Feedback", "type": "read", "protocol": "API", "examples": ["Culture Amp", "Glint", "Qualtrics"]}
      ],

      "decision_rules": [
        {"rule_id": "DR-PM-040", "name": "Rating Discrepancy", "condition": "abs(manager_rating - self_rating) > 2", "action": "require_calibration_discussion", "priority": 1}
      ],

      "error_handlers": [
        {"error_type": "incomplete_justification", "severity": "medium", "action": "require_additional_comments", "notification": ["manager"]}
      ]
    },

    {
      "id": "agent_6_4_1_1_step6",
      "apqc_id": "6.4.1.1",
      "step_number": 6,
      "step_name": "Calibration",
      "description": "Calibrate ratings across teams for consistency and fairness",
      "purpose": "Fair and consistent ratings",
      "business_value": "Equitable performance differentiation",

      "capabilities": ["calibration_sessions", "distribution_analysis", "bias_detection", "rating_adjustment", "consistency_scoring"],

      "input_schema": [
        {"name": "calibration_group", "type": "array", "required": true},
        {"name": "proposed_ratings", "type": "array", "required": true},
        {"name": "distribution_guidelines", "type": "object", "required": true}
      ],

      "output_schema": [
        {"name": "calibrated_ratings", "type": "array", "required": true},
        {"name": "rating_distribution", "type": "object", "required": true},
        {"name": "adjustment_log", "type": "array", "required": true},
        {"name": "calibration_notes", "type": "array", "required": false}
      ],

      "required_integrations": [
        {"system": "Performance Management", "type": "bidirectional", "protocol": "API"},
        {"system": "Analytics Platform", "type": "read", "protocol": "API", "examples": ["Visier", "One Model"]}
      ],

      "decision_rules": [
        {"rule_id": "DR-PM-050", "name": "Forced Distribution", "condition": "top_rating_percentage > guideline_max", "action": "require_justification", "priority": 1},
        {"rule_id": "DR-PM-051", "name": "Bias Alert", "condition": "demographic_variance > threshold", "action": "flag_for_review", "priority": 1}
      ],

      "error_handlers": [
        {"error_type": "calibration_deadlock", "severity": "high", "action": "escalate_to_hr_leader", "notification": ["hr_director"]}
      ]
    },

    {
      "id": "agent_6_4_1_1_step7",
      "apqc_id": "6.4.1.1",
      "step_number": 7,
      "step_name": "Performance Review Delivery",
      "description": "Conduct performance review conversation and document outcomes",
      "purpose": "Clear performance communication",
      "business_value": "Employee development and engagement",

      "capabilities": ["review_scheduling", "conversation_guide", "outcome_documentation", "development_planning", "acknowledgment_tracking"],

      "input_schema": [
        {"name": "employee_id", "type": "string", "required": true},
        {"name": "calibrated_rating", "type": "string", "required": true},
        {"name": "manager_assessment", "type": "object", "required": true}
      ],

      "output_schema": [
        {"name": "review_record", "type": "object", "required": true},
        {"name": "development_plan", "type": "object", "required": true},
        {"name": "employee_acknowledgment", "type": "boolean", "required": true},
        {"name": "follow_up_actions", "type": "array", "required": true}
      ],

      "required_integrations": [
        {"system": "Performance Management", "type": "bidirectional", "protocol": "API"},
        {"system": "Learning Management", "type": "outbound", "protocol": "API"},
        {"system": "Compensation", "type": "outbound", "protocol": "API"}
      ],

      "decision_rules": [
        {"rule_id": "DR-PM-060", "name": "PIP Required", "condition": "rating == 'needs_improvement'", "action": "initiate_pip_workflow", "priority": 1},
        {"rule_id": "DR-PM-061", "name": "Promotion Ready", "condition": "rating == 'exceeds' AND consecutive_exceeds >= 2", "action": "flag_for_promotion", "priority": 2}
      ],

      "error_handlers": [
        {"error_type": "review_not_acknowledged", "severity": "medium", "action": "escalate_to_hr", "notification": ["hr_partner"]}
      ]
    }
  ],

  "integration_summary": {
    "performance_platforms": ["Workday", "SAP SuccessFactors", "15Five", "Lattice", "Culture Amp"],
    "feedback_tools": ["Slack", "Microsoft Teams", "Bonusly", "Kudos"],
    "analytics": ["Visier", "One Model", "Tableau", "Power BI"],
    "learning": ["Cornerstone", "Degreed", "LinkedIn Learning"]
  },

  "kpis": [
    {"name": "Goal Completion Rate", "description": "Percentage of goals achieved", "target": "> 75%", "measurement": "goals_achieved / total_goals"},
    {"name": "Feedback Frequency", "description": "Average feedback per employee per month", "target": "> 2", "measurement": "total_feedback / employees / months"},
    {"name": "Review Completion Rate", "description": "Reviews completed on time", "target": "> 95%", "measurement": "completed_on_time / total_reviews"},
    {"name": "Rating Distribution Health", "description": "Alignment to expected distribution", "target": "Within 5%", "measurement": "actual_distribution vs expected_distribution"},
    {"name": "Employee Satisfaction", "description": "Satisfaction with performance process", "target": "> 4.0/5.0", "measurement": "avg(process_satisfaction_scores)"}
  ]
}

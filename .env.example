# =============================================================================
# Agent Platform API - Environment Configuration
# =============================================================================
# Copy this file to .env and adjust values as needed.
# Environment variables override these defaults.

# =============================================================================
# Database
# =============================================================================
DATABASE_URL=sqlite:///./agents.db
# DATABASE_URL=postgresql://user:password@localhost:5432/agents
DATABASE_ECHO=false
DATABASE_POOL_SIZE=5

# =============================================================================
# Server
# =============================================================================
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=false
RELOAD=false
WORKERS=1

# =============================================================================
# Security
# =============================================================================
API_KEY_ENABLED=false
API_KEY_HEADER=X-API-Key
# CORS_ORIGINS=http://localhost:3000,http://localhost:8080
CORS_ORIGINS=*
CORS_ALLOW_CREDENTIALS=true

# =============================================================================
# Logging
# =============================================================================
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO
# Set to true for JSON output (useful for log aggregation)
LOG_JSON=false

# =============================================================================
# Workflow Execution
# =============================================================================
MAX_WORKFLOW_TIMEOUT=300
MAX_STEP_RETRIES=3
STEP_RETRY_DELAY=5
WORKFLOW_CONCURRENT_LIMIT=10

# =============================================================================
# Agent Execution
# =============================================================================
AGENT_TIMEOUT=60
AGENT_MAX_MEMORY_MB=512

# =============================================================================
# Integration
# =============================================================================
INTEGRATION_TIMEOUT=30
INTEGRATION_MAX_RETRIES=3

# =============================================================================
# Feature Flags
# =============================================================================
ENABLE_METRICS=true
ENABLE_TRACING=false
ENABLE_ADMIN_ENDPOINTS=true
